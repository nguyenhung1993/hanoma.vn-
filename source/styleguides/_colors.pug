//-------------------------------------------------------
//- Styleguides :: Colors
//-------------------------------------------------------

-
  var colors = [
    { key: '$white', color: '#fff' },
    { key: '$black', color: '#373737' },
    { key: '$red', color: '#b12427' },
    { key: '$success', color: '#00b563' },
    { key: '$notice', color: '#ffc82c' },
    { key: '$warning', color: '#fa4169' },
    { key: '$spanish-gray', color: '#9b9b9b' },
    { key: '$platinum', color: '#e2e2e2' },
    { key: '$flash-white', color: '#f2f2f2' },
    { key: '$blue', color: '#21679b' },
    { key: '$payne-grey', color: '#636e7b' },
  ];

.row
  each val in colors
    .col-3
      .code-example
        .demo(style=`background-color: ${val.color}; width: 100%; height: 100px`)
        pre
          code
            | #{val.key}: #{val.color}
